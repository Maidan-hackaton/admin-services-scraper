    <script type="text/javascript" language="javascript">
        var currTab = "1";

        $(document).ready(function () {
            $('.rowed iframe').width("650px").height("400px");

            $(".ecell").bind("click", function () {
                currTab = GetUrlParam($(this).attr("href"), "tab");
                $(".ecell").parent().attr('class', 'emain100x100 bgLBlue'); //.removeClass('emain100x100C').addClass('emain100x100');
                $(this).parent().attr('class', 'emain100x100C bgBlue'); //.removeClass('emain100x100').addClass('emain100x100C');
                $('.hsItemV').hide();
                //$('#hsItem' + currTab).show('slow');
                $('#hsItem' + currTab).show('slow', function () { $('.hsItemV[id!="hsItem' + currTab + '"]').hide(); });

                $('.tabTit').hide();
                $('#tt' + currTab).show();

                //ReloadMap();

                setTimeout(function () {
                    $('#flowscrlbleV').jScrollPane({ showArrows: true, scrollbarWidth: 30 });
                }, 1000);

                return false;
            });

            $('#flowscrlbleV').jScrollPane({ showArrows: true, scrollbarWidth: 30 });

        });

        function ReloadMap() {
            //if (!(currTab == "3" || currTab == "4")) { return; }
            //ReloadByBlock(currTab, true);
        }

        function ReloadByBlock(identifier, mapMustBeReloaded) {
            if (currTab != identifier)
                return;

            $("#hsItem" + identifier + " .itemV ol li").each(function () {
                var currItemIsVisible = false;
                if ($(this).attr("style") != null) {
                    if ($(this).attr("style").indexOf('block') > 0) {
                        currItemIsVisible = true;
                    }
                }
                else {
                    currItemIsVisible = true;
                }

                if ($(this).attr("mapReLoaded") != null) {
                    if ($(this).attr("mapReLoaded") == "1") {
                        mapMustBeReloaded = false;
                    }
                    else {
                        mapMustBeReloaded = true;
                    }
                }
                else {
                    mapMustBeReloaded = true;
                }

                if (currItemIsVisible && mapMustBeReloaded) {
                    $(this).attr("mapReLoaded", "1");

                    var frm = $('iframe', this);
                    var purl = frm.attr('src');
                    frm.remove();
                    var frameHtml = '<iframe width="650px" height="400px" scrolling="no" frameborder="0" ' +
                            'marginheight="0" marginwidth="0" hspace="0" vspace="0" src="' + purl + '"></iframe>';
                    $(this).append(frameHtml);
                }
            });
        }

    </script>
